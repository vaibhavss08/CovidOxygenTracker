<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Source"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:background="@color/sky_blue"
        android:layout_marginTop="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Source: "
        android:textSize="28dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        />

     <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Enter Name of Source"
        android:textSize="25dp"
        android:layout_margin="10dp"
         android:id="@+id/source_name">
    </EditText>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:id="@+id/source_address">
    </EditText>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:id="@+id/source_contact">
    </EditText>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Supply Quantity"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:id="@+id/source_supply">
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Source"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button"
        android:id="@+id/source_add"/>

    <Button
        android:id="@+id/view_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allot Oxygen"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button"
        />
</LinearLayout>